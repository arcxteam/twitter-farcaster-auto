{
  "manifest_version": 3,
  "name": "Auto Scroll & Refresh X & Farcaster",
  "version": "1.0.2",
  "description": "This tools for auto scrolling and refreshes on Twitter/X & Farcaster homepages. Created by 0xgrey. Licensed under MIT License.",
  "author": "Greyscope&Co (0xgrey)",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://x.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/icon16x16.png",
      "48": "src/icon48x48.png",
      "128": "src/icon128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "src/icon16x16.png",
    "48": "src/icon48x48.png",
    "128": "src/icon128x128.png"
  }
}
