{
  "manifest_version": 3,
  "name": "Tools Auto Social Media Scroll & Refresh",
  "version": "1.1.0",
  "description": "Extensions tool auto scrolling and refresh on Twitter/X, Farcaster, Bluesky, LinkedIn, Quora & Reddit homepages/feeds. Created by 0xgrey. Licensed under MIT License.",
  "author": "Greyscope&Co",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": [
    "https://x.com/*", 
    "https://farcaster.xyz/*", 
    "https://bsky.app/*",
    "https://www.linkedin.com/*",
    "https://www.quora.com/*",
    "https://www.reddit.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/icon16x16.png",
      "48": "src/icon48x48.png",
      "128": "src/icon128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "src/icon16x16.png",
    "48": "src/icon48x48.png",
    "128": "src/icon128x128.png"
  }
}
